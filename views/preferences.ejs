<!doctype html>
<html>
<head>
    <title>Demo Day</title>
    <link rel="stylesheet" href="reset.css">
    <link rel="stylesheet" href="theme-default.css">
    <link rel="stylesheet" href="style.css">
    <link rel="icon" sizes="any" type="image/svg+xml" href="img/kanji.svg" >
</head>
<body>
    <header class="page-header text-center">
        <a class="logo-link" href="/profile"><img class="kanji-logo" src="img/kanji.svg" alt="picture of scroll with kanji"></a>
        <h1>Preferences</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </header>
    <% if (user.local.email) { %>
    <main class="profile-main">
        <div class="content">
            <form class="preference-menu text-box" method="post" action="/updatePreferences">
                <input type="hidden" name="_id" value="<%= user._id %>">
                <label>Grade 1 - <input name="grade1" type="checkbox" value=true <%= user.local.preferences.grades.grade1 ? "checked" : "" %>></label>
                <label>Grade 2 - <input name="grade2" type="checkbox" value=true <%= user.local.preferences.grades.grade2 ? "checked" : "" %>></label>
                <label>Grade 3 - <input name="grade3" type="checkbox" value=true <%= user.local.preferences.grades.grade3 ? "checked" : "" %>></label>
                <span>Replacement Frequency</span>
                <input name="frequency" type="range" value=<%= user.local.preferences.frequency %>>
                <button>Save</button>
            </form>
        </div>
    </div>
    <% } %>
    <script src="js/preferences.js"></script>
</body>
</html>